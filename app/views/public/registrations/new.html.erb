<div class="container">
  <label class="h4 bg-light mx-5 my-4 px-4">新規登録</label>
  <div class="row mb-2">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :"氏名" %><br />
          <%= f.text_field :name %> 
        </div>
        
        <div class="field">
          <%= f.label :"アカウント名" %><br />
          <%= f.text_field :account_name %> 
        </div>
        
        <div class="field">
          <%= f.label :"紹介文" %><br />
          <%= f.text_area :introduction %> 
        </div>
        
        <div class="field">
          <%= f.label :"Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary px-5" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <label class="h4 bg-light px-4">既に登録済みの方</label>
  <div class="row mb-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">
      <%= link_to "こちら", new_user_session_path %>　からログインしてください。
    </div>
  </div>

</div>
