<div class="container">
  <label class="h4 bg-light mx-5 my-4 px-4"><%= @user.account_name %>のページ</label>
  <div class="row mb-2">

    <div class="col-lg-3">
      <%= image_tag @user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
      <table class="table">
        <tbody>
          <tr><td><%= @user.account_name %></td></tr>
          <tr><td><%= @user.introduction %></td></tr>
          <tr><td>いいねフォローフォロワー</td></tr>
        </tbody>
      </table>
      <% if @user == current_user && @user.email != "guest@example.com" %>
        <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"%>
      <% end %>
    </div>

    <div class="col-lg-8 offset-md-1">
      <div class="card-list-container py-5">
        <% @user.post_images.each do |post_image| %>
          <div class="card w-50 mx-auto mt-4 shadow-lg">
            <%= link_to post_image_path(post_image.id) do %>
              <%= image_tag post_image.get_image(200,200), class: "card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <%= image_tag post_image.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
                </div>
                <div class="col-9 offset-1">
                  <p class="card-title">
                    <%= link_to(post_image_path(post_image.id), class: "text-dark") do %>
                      <strong><span><%= post_image.name %></span></strong>
                    <% end %>
                  </p>
                  <p class="card-text">投稿日：<%= post_image.created_at.strftime('%Y/%m/%d') %></p>
                  <span> By <%= post_image.user.name %> ｜ </span>
                  <span><%= link_to "#{post_image.comments.count} コメント", post_image_path(post_image.id), class: "text-dark" %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @post_images %>
      </div>
    </div>

  </div>
</div>