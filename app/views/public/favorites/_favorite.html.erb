<% if post_image.favorited_by?(current_user) %>
  <p>
    <%= link_to post_image_favorite_path(post_image), method: :delete, remote: true, data: {"turbolinks" => false} do %>
      ♥<%= post_image.favorites.count %> いいね
    <% end %>
  </p>
    <% else %>
  <p>
    <%= link_to post_image_favorite_path(post_image), method: :post, remote: true, data: {"turbolinks" => false} do %>
      ♡<%= post_image.favorites.count %> いいね
    <% end %>
  </p>
<% end %>