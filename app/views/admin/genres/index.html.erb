<div class="container">
  <label class="h4 bg-light mt-4 mb-5 px-4">ジャンル一覧・追加</label>
  <div class="row">
    <div class="col-lg-10">
      
      <%= render 'layouts/errors', obj: @genre %>
      
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名, class:"mr-5" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class:"btn btn-primary ml-5" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <table class="table shadow-sm mt-5">
        <thead class="bg-light">
          <th>ID</th>
          <th>ジャンル</th>
          <th colspan="2"></th>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-primary" %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>